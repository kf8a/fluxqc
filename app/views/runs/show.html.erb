<div id='title-block'>
<h1><%= @run.name %></h1>
<p>Sampled on: <%= @run.sampled_on %> Study: <%= @run.study %></p>
<% @run.current_state.events.keys.each do |event| %>
  <%= button_to "#{event.to_s}", :action=> event, :remote=>true %>
<% end %>
</div>
<div id='spacer'></div>
<div id='container'></div>

<script>
  INITIAL_DATA = <%=raw @incubations.to_json(:methods=>['co2','n2o','ch4']) %>
  window.run_id = <%= @run.id %>
</script>

<script type='text/template' id='flux-list-template'>
  <h1>Model Fluxes</h1>
  <ul class='flux'></ul>
</script>

<script type='text/template' id='incubation-template'>
  <a href='/incubations/{{id}}/edit' class='treatment-label'>T{{ treatment }}R{{ replicate }} C:{{chamber}}</a>
</script>
