<%= simple_form_for @template, :html=>{:class=>'form-horizontal'} do |f| %>
  <%= f.input :name,:input_html => {:class=>'span8' }%> 
  <%= f.input :sampled_on , :label=>'Sample Date' , :as => :string, :input_html =>{ :class=>'span2', :datepicker=>'datepicker' }%>
  <%= f.input :study, :collection => @templates %>
  <%= f.button :submit %>
<% end %>
